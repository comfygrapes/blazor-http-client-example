@page "/"

<div class="py-3 flex flex-col items-center gap-3">
    <p class="text-2xl">
        Users
    </p>

    <div class="flex flex-col gap-2">
        @if (_users != null)
        {
            @foreach (var user in _users)
            {
                <div class="border-2 rounded-md border-indigo-600">
                    <div class="card w-100 bg-base-100 card-sm shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title">@user.Name</h2>
                            <p>ID: @user.Id</p>
                            <p>User: @user.Username</p>
                            <p>Email: @user.Email</p>
                            <div class="justify-end card-actions">
                                <button class="btn btn-soft btn-error">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="skeleton w-100 h-47 rounded-md"></div>
            <div class="skeleton w-100 h-47 rounded-md"></div>
            <div class="skeleton w-100 h-47 rounded-md"></div>
            <div class="skeleton w-100 h-47 rounded-md"></div>
            <div class="skeleton w-100 h-47 rounded-md"></div>
        }
    </div>
</div>

